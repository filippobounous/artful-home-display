
# API configuration
VITE_API_BASE_URL=https://api.example.com
# Legacy support (use VITE_API_BASE_URL instead)
VITE_API_URL=http://localhost:8000
# API key for your FastAPI server (optional)
VITE_API_KEY=
# API health check endpoint path
VITE_API_HEALTH_PATH=/health
# Enable offline demo login (demo/password123)
VITE_ALLOW_DEMO_LOGIN=false
# How long dismissed toasts remain visible (ms)
VITE_TOAST_REMOVE_DELAY=5000

# Demo credentials feature (only enable in development/staging)
VITE_ENABLE_DEMO_LOGIN=false
VITE_DEMO_EMAIL=demo@example.com
VITE_DEMO_USERNAME=demo
VITE_DEMO_PASSWORD=password123
